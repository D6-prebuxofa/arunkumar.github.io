<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Admin Dashboard</h1>

  <h2>Add Project</h2>
  <form action="/admin/projects/add" method="POST">
    <input type="text" name="title" placeholder="Project Title" required><br>
    <input type="text" name="description" placeholder="Description" required><br>
    <input type="text" name="link" placeholder="Link"><br>
    <button type="submit">Add Project</button>
  </form>

  <h2>Projects</h2>
  <table>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Link</th>
      <th>Action</th>
    </tr>
    <% projects.forEach(project => { %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= project.link %></td>
        <td>
          <form action="/admin/projects/delete/<%= project._id %>" method="POST">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>

  <h2>Add Skill</h2>
  <form action="/admin/skills/add" method="POST">
    <input type="text" name="name" placeholder="Skill Name" required><br>
    <input type="text" name="level" placeholder="Level (Beginner, Intermediate, Expert)" required><br>
    <button type="submit">Add Skill</button>
  </form>

  <h2>Skills</h2>
  <table>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>Action</th>
    </tr>
    <% skills.forEach(skill => { %>
      <tr>
        <td><%= skill.name %></td>
        <td><%= skill.level %></td>
        <td>
          <form action="/admin/skills/delete/<%= skill._id %>" method="POST">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>


